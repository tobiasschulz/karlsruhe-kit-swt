package org.jis.mosaique;

import java.io.File;

/**
 * This class handles the program arguments.
 * 
 * @author Thomas Karcher
 * 
 */
public class Configuration {
	private File source;
	private File info;
	private File mosaiquesource;
	private Integer kachelSize;
	private File dest;

	/**
	 * Sets the source directory.
	 * 
	 * @param source
	 *            The source directory.
	 */
	public void setSource(File source) {
		this.source = source;
	}

	/**
	 * Returns the source directory.
	 * 
	 * @return The source directory.
	 */
	public File getSource() {
		return source;
	}

	/**
	 * Set the information (intermediate storage) file
	 * 
	 * @param info
	 *            the information (intermediate storage) file
	 */
	public void setInfo(File info) {
		this.info = info;
	}

	/**
	 * Returns the information (intermediate storage) file.
	 * 
	 * @return The storage file.
	 */
	public File getInfo() {
		return info;
	}

	/**
	 * Set the source directory that holds the PNG tiles
	 * 
	 * @param mosaiquesource
	 *            the source directory that holds the PNG tiles
	 */
	public void setMosaiquesource(File mosaiquesource) {
		this.mosaiquesource = mosaiquesource;
	}

	/**
	 * Returns the source directory that holds the PNG tiles.
	 * 
	 * @return The original file
	 */
	public File getMosaiquesource() {
		return mosaiquesource;
	}

	/**
	 * Set the target mosaique file.
	 * 
	 * @param dest
	 *            the target mosaique file
	 */
	public void setDest(File dest) {
		this.dest = dest;
	}

	/**
	 * Returns the target mosaique file.
	 * 
	 * @return The target file.
	 */
	public File getDest() {
		return dest;
	}

	/**
	 * Set the kachel size.
	 * 
	 * @param kachelSize
	 *            the kachel size
	 */
	public void setKachelSize(int kachelSize) {
		this.kachelSize = kachelSize;
	}

	/**
	 * Returns the kachel size.
	 * 
	 * @return the kachel size
	 */
	public Integer getKachelSize() {
		return kachelSize;
	}
}
